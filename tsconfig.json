{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": true
  },
  "include": [
    "src/**/*.ts"
  ]
}