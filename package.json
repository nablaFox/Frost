{
  "name": "pmt",
  "version": "0.0.1",
  "license": "MIT",
  "author": "nablaFox",
  "description": "CLI to help manage local projects efficiently",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nablaFox/pmt.git"
  },
  "keywords": [
    "cli",
    "projects",
    "manage"
  ],
  "bin": {
    "pmt": "./bin/pmt.js"
  },
  "engines": {
    "node": ">= 12.22.12"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "rm -rf dist && rollup --config rollup.config.ts --configPlugin typescript",
    "dev": "rollup --config rollup.config.ts --configPlugin typescript --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src --fix",
    "test": "vitest"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/prompts": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "programmer": "^2.0.0",
    "prompts": "^2.4.2",
    "rollup": "^3.25.1",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  }
}
