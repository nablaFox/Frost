{
  "name": "pm-tool",
  "version": "1.0.0",
  "license": "MIT",
  "author": "nablaFox",
  "description": "CLI to help manage local projects efficiently",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nablaFox/PMT.git"
  },
  "keywords": [
    "cli",
    "projects",
    "manage"
  ],
  "bin": {
    "pmt": "./bin/pmt.js"
  },
  "preferGlobal": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "start": "ts-node --esm src/index.ts",
    "build": "rm -rf dist && tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src --fix",
    "test": "vitest"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vitest": "^0.32.0"
  },
  "dependencies": {
    "@types/prompts": "^2.4.4",
    "programmer": "^2.0.0",
    "prompts": "^2.4.2"
  }
}
